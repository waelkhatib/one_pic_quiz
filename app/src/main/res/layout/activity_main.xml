<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_sp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/letsPlay"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal" 
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/AllAppsGoogle"
            android:layout_width="50.0dip"
            android:layout_height="50.0dip"
            android:background="@drawable/googleplayclickedxml" />

        <Button
            android:id="@+id/button1"
            android:layout_width="52.0dip"
            android:layout_height="50.0dip"
            android:layout_marginLeft="5dp"
            android:background="@drawable/facebookclicked"
            android:visibility="gone" />

        <Button
            android:id="@+id/restartGame"
            android:layout_width="50.0dip"
            android:layout_height="50.0dip"
            android:layout_marginLeft="5dp"
            android:background="@drawable/restartxml" />

        <Button
            android:id="@+id/earnCoin"
            android:layout_width="50.0dip"
            android:layout_height="50.0dip"
            android:layout_marginLeft="5dp"
            android:background="@drawable/earncoinclickedxml" />
    </LinearLayout>

    <Button
        android:id="@+id/letsPlay"
        android:layout_width="200.0dip"
        android:layout_height="45.0dip"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20.0dip"
        android:background="@drawable/letsplayclickxml" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="180.0dip"
        android:layout_height="180.0dip"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/title" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="180.0dip"
        android:layout_height="105.0dip"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14.0dip"
        android:contentDescription="@string/app_name"
        android:src="@drawable/iconmain" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/admob_publisher_id" />

</RelativeLayout>